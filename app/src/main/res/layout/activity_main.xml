<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideEast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideWest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="379dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="32dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideSouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="32dp" />

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="textEnd"
        android:text="@string/display"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideSouth"
        app:layout_constraintEnd_toStartOf="@+id/guideEast"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        app:layout_constraintTop_toBottomOf="@+id/input">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="sevenBTN"
                android:text="@string/seven"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="eightBTN"
                android:text="@string/eight"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="nineBTN"
                android:text="@string/nine"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnSqrt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="sqrtBTN"
                android:text="@string/sqrt"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="clearBTN"
                android:text="@string/clear"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="fourBTN"
                android:text="@string/four"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="fiveBTN"
                android:text="@string/five"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="sixBTN"
                android:text="@string/six"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="divideBTN"
                android:text="@string/divide"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="percentBTN"
                android:text="@string/percent"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="oneBTN"
                android:text="@string/one"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="twoBTN"
                android:text="@string/two"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="threeBTN"
                android:text="@string/three"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="multiplyBTN"
                android:text="@string/multiply"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="minusBTN"
                android:text="@string/subtract"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="plusMinusBTN"
                android:text="@string/plusMinus"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="zeroBTN"
                android:text="@string/zero"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="pointBTN"
                android:text="@string/point"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="plusBTN"
                android:text="@string/add"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:layout_weight=".2"
                android:onClick="equalBTN"
                android:text="@string/equal"
                android:textSize="30dp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>